{% extends 'base.html.twig' %}

{% block title %}Visualisation{% endblock %}

{% block stylesheets %}
    <link type="text/css" rel="stylesheet" href="../../content/style/style.css"/>
{% endblock %}

{% block body %}
    <a href="/"><button>Menu principal</button></a>

    <table>
        <tr>
            <th>id</th>
            <th>date</th>
            <th>location</th>
            <th>from</th>
            <th>to</th>
            <th>time</th>
            <th>comment</th>
            <th>Modifier / Supprimer</th>
        </tr>
        <tr>
            <td>{{ vol.getId() }}</td>
            <td>{{ vol.date|date("m/d/Y") }}</td>
            <td>{{ vol.getLocation() }}</td>
            <td>{{ vol.getAltitudeFrom() }}</td>
            <td>{{ vol.getAltitudeTo() }}</td>
            <td>{{ vol.getTime() }}</td>
            <td>{{ vol.getComment() }}</td>
            <td>
                <a href="/edit/{{ vol.getId() }}"><button>Modifier</button></a>
                <a href="/delete/{{ vol.getId() }}"><button>Supprimer</button></a>
            </td>
        </tr>
    </table>
{% endblock %}
